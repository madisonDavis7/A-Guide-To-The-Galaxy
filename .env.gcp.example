# Google Cloud Platform Environment Variables

# Production settings
DEBUG=False
SECRET_KEY=your-django-secret-key-here

# Database (Google Cloud SQL)
# Format: postgresql://username:password@/database?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
DATABASE_URL=postgresql://galaxyuser:your-password@/guidegalaxy?host=/cloudsql/guide-to-galaxy-app:us-central1:guide-galaxy-db

# Google Cloud Run port (automatically set by Cloud Run)
PORT=8080

# Optional: Custom allowed hosts
ALLOWED_HOSTS=your-custom-domain.com

# Local development only
DJANGO_DATABASE=local
